<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="12dp">

    <ImageView
        android:id="@+id/ivHistoryCartItem"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/item_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHistoryItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baki"
        android:layout_marginStart="7dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvHistoryItemPrice"
        app:layout_constraintStart_toEndOf="@+id/ivHistoryCartItem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvHistoryItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="7dp"
        android:text="P300"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/tvHistoryQty"
        app:layout_constraintStart_toEndOf="@+id/ivHistoryCartItem"
        app:layout_constraintTop_toBottomOf="@+id/tvHistoryItemName" />


    <TextView
        android:id="@+id/tvHistoryQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:text="Qty: 1"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivHistoryCartItem"
        app:layout_constraintTop_toBottomOf="@id/tvHistoryItemPrice"/>



</androidx.constraintlayout.widget.ConstraintLayout>