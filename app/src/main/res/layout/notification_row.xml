<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/ivWarning"
        android:layout_width="8dp"
        android:layout_height="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/fa_warning"/>
    <ImageView
        android:id="@+id/ivMessageProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_clearmain"
        app:layout_constraintTop_toTopOf="@id/ivWarning"
        app:layout_constraintBottom_toBottomOf="@id/ivWarning"
        app:layout_constraintStart_toEndOf="@id/ivWarning"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/tvMessageFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Person 1"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/ivMessageProfile"
        app:layout_constraintBottom_toTopOf="@id/tvMessageContent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvMessageContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Lorem ipsum"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/ivMessageProfile"
        app:layout_constraintTop_toBottomOf="@id/tvMessageFrom"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvMessageTimeSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3m"
        android:textSize="11sp"
        android:textColor="@color/gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>